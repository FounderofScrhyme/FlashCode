datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Card {
    id        String  @id @default(cuid())
    question  String
    answer    String
    language  String
    reviewCount  Int  @default(0)
    nextReview   DateTime
    userId    String
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt

    @@index([userId, nextReview])
}